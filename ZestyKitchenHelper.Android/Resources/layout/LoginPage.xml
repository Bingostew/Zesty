
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="100dp"
            android:text="Cloud Account"
         android:textSize="17dp"
            android:layout_marginTop="26dp"
             android:layout_marginLeft="36dp"
             android:layout_marginRight="36dp"
            android:background="#12AbCC"
            android:id="@+id/loginButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local Account"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:background="#FED42C"
        android:translationY="190dp"
        android:id="@+id/skipLoginButton"/>
     <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:textSize="17dp"
        android:textColor="#0000FF"
        android:translationY="250dp"
        android:id="@+id/infoText"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rect_overlay"
        android:id="@+id/loadingOverlay"/>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="300dp"
            android:text="Loading..."
            android:padding="36dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/loadingText"/>
</RelativeLayout>